{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "boot": "yarn clean && yarn install && yarn bootstrap && yarn build && lerna link",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --no-private --stream",
    "build-storybook": "build-storybook -s public",
    "clean": "git clean -fdx .",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "core": "yarn workspace @chakra-components/core",
    "docs": "yarn workspace @chakra-components/docs",
    "format": "yarn prettier --write",
    "lint": "lerna run lint",
    "prettier": "prettier \"**/**/**/*.+(js|json|jsx|ts|tsx|md|mdx)\"",
    "release": "lerna publish",
    "start": "yarn build && yarn storybook",
    "start:all": "concurrently \"yarn core start\" \"yarn docs dev\" \"yarn storybook\" ",
    "storybook": "start-storybook -p 9009 -s public",
    "validate": "yarn lint && yarn prettier --list-different",
    "version": "lerna version --no-push"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/core": "7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "7.10.1",
    "@babel/plugin-transform-object-assign": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.1",
    "@babel/preset-react": "7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^6.0.0-beta.17",
    "@storybook/addon-knobs": "^6.0.0-beta.17",
    "@storybook/react": "^6.0.0-beta.17",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "all-contributors-cli": "^6.14.2",
    "babel-eslint": "10.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "5.1.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "husky": "^4.2.5",
    "lerna": "3.22.0",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "docs"
  ]
}
